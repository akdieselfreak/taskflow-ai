# TaskFlow AI Environment Configuration
# Copy this file to .env and update the values

# Security
JWT_SECRET=your-super-secure-secret-key-here-change-this-in-production
DATABASE_PATH=./data/taskflow.db

# Server Configuration
NODE_ENV=development
PORT=3001

# CORS Configuration (comma-separated list)
CORS_ORIGIN=http://localhost:8000,http://localhost:3000,http://localhost:3001

# Optional: Database Configuration
DB_MAX_CONNECTIONS=10
DB_TIMEOUT=30000

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
